<%= nested_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cost, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>

<!-- Chapter Form  -->

<%= f.fields_for :chapter do |chapter_form| -%>
  <div class="control-group">
   <%= chapter_form.label :chapter, "Chapter Name" , :class => 'control-label'%>
    <div class="controls">
    <%= chapter_form.text_field :chapter, :class => 'text_field' %>
   </div>
  </div>
    <div class="control-group">
   <%= chapter_form.label :chaptercontent,"Chapter content", :class => 'control-label'%>
    <div class="controls">
    <%= chapter_form.text_field :chaptercontent, :class => 'text_area' %>
     </div>
  </div>
  <% end %>

<p><%= f.link_to_add "Add a new Chapter", :chapter %></p>
<!-- End of Chapter Form -->

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn' %>
  </div>
<% end %>
